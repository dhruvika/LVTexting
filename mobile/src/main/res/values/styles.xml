<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Theme.AppCompat.Light.NoActionBar-->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBlack</item>
        <!-- requires API 21 and up -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorWhite</item> <!-- bottom bar -->
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorBlack</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!--<item name="android:colorForegroundInverse">@color/colorBlack</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorBlack</item>
    </style>

    <style name="FontSize"> </style>
    <style name="FontSize.S1"><item name="font_size">12sp</item></style>
    <style name="FontSize.S2"><item name="font_size">14sp</item></style>
    <style name="FontSize.S3"><item name="font_size">16sp</item></style>
    <style name="FontSize.S4"><item name="font_size">18sp</item></style>
    <style name="FontSize.S5"><item name="font_size">20sp</item></style>
    <style name="FontSize.S6"><item name="font_size">22sp</item></style>
    <style name="FontSize.S7"><item name="font_size">24sp</item></style>
    <style name="FontSize.S8"><item name="font_size">26sp</item></style>
    <style name="FontSize.S9"><item name="font_size">28sp</item></style>

    <style name="LineSpacing"> </style>
    <style name="LineSpacing.S0"><item name="line_spacing">1.0</item></style>
    <style name="LineSpacing.S1"><item name="line_spacing">1.2</item></style>
    <style name="LineSpacing.S2"><item name="line_spacing">1.4</item></style>
    <style name="LineSpacing.S3"><item name="line_spacing">1.6</item></style>
    <style name="LineSpacing.S4"><item name="line_spacing">1.8</item></style>
    <style name="LineSpacing.S5"><item name="line_spacing">2.0</item></style>

    <style name="CharSpacing"> </style>
    <style name="CharSpacing.S0"><item name="char_spacing">0.0</item></style>
    <style name="CharSpacing.S1"><item name="char_spacing">0.1</item></style>
    <style name="CharSpacing.S2"><item name="char_spacing">0.2</item></style>
    <style name="CharSpacing.S3"><item name="char_spacing">0.3</item></style>
    <style name="CharSpacing.S4"><item name="char_spacing">0.4</item></style>
    <style name="CharSpacing.S5"><item name="char_spacing">0.5</item></style>

    <style name="ScreenPadding"> </style>
    <style name="ScreenPadding.S0"><item name="screen_padding">0dp</item></style>
    <style name="ScreenPadding.S1"><item name="screen_padding">4dp</item></style>
    <style name="ScreenPadding.S2"><item name="screen_padding">8dp</item></style>
    <style name="ScreenPadding.S3"><item name="screen_padding">12dp</item></style>
    <style name="ScreenPadding.S4"><item name="screen_padding">16dp</item></style>
    <style name="ScreenPadding.S5"><item name="screen_padding">20dp</item></style>
    <style name="ScreenPadding.S6"><item name="screen_padding">24dp</item></style>
    <style name="ScreenPadding.S7"><item name="screen_padding">28dp</item></style>
    <style name="ScreenPadding.S8"><item name="screen_padding">32dp</item></style>
    <style name="ScreenPadding.S9"><item name="screen_padding">36dp</item></style>

</resources>
