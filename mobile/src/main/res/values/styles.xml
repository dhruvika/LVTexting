<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBlack</item>
        <!-- requires API 21 and up -->
        <item name="android:navigationBarColor">@color/colorWhite</item> <!-- bottom bar -->
        <item name="android:statusBarColor">@color/colorWhite</item> <!-- top bar -->
        <item name="android:colorButtonNormal">@color/colorBlack</item>
    </style>

    <style name="FontSize"> </style>
    <style name="FontSize.S1"><item name="font_size">12sp</item></style>
    <style name="FontSize.S2"><item name="font_size">14sp</item></style>
    <style name="FontSize.S3"><item name="font_size">16sp</item></style>
    <style name="FontSize.S4"><item name="font_size">18sp</item></style>
    <style name="FontSize.S5"><item name="font_size">20sp</item></style>
    <style name="FontSize.S6"><item name="font_size">22sp</item></style>
    <style name="FontSize.S7"><item name="font_size">24sp</item></style>
    <style name="FontSize.S8"><item name="font_size">26sp</item></style>
    <style name="FontSize.S9"><item name="font_size">28sp</item></style>

    <style name="LineSpacing"> </style>
    <style name="LineSpacing.S0"><item name="line_spacing">1.0</item></style>
    <style name="LineSpacing.S1"><item name="line_spacing">1.2</item></style>
    <style name="LineSpacing.S2"><item name="line_spacing">1.4</item></style>
    <style name="LineSpacing.S3"><item name="line_spacing">1.6</item></style>
    <style name="LineSpacing.S4"><item name="line_spacing">1.8</item></style>
    <style name="LineSpacing.S5"><item name="line_spacing">2.0</item></style>

    <style name="CharSpacing"> </style>
    <style name="CharSpacing.S0"><item name="char_spacing">0.0</item></style>
    <style name="CharSpacing.S1"><item name="char_spacing">0.1</item></style>
    <style name="CharSpacing.S2"><item name="char_spacing">0.2</item></style>
    <style name="CharSpacing.S3"><item name="char_spacing">0.3</item></style>
    <style name="CharSpacing.S4"><item name="char_spacing">0.4</item></style>
    <style name="CharSpacing.S5"><item name="char_spacing">0.5</item></style>

</resources>
