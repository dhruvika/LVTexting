<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBlack</item>
        <!-- requires API 21 and up -->
        <item name="android:navigationBarColor">@color/colorWhite</item> <!-- bottom bar -->
        <item name="android:statusBarColor">@color/colorWhite</item> <!-- top bar -->
        <item name="android:colorButtonNormal">@color/colorBlack</item>
    </style>

    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="font_small">14sp</item>
        <item name="font_medium">16sp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_small">18sp</item>
        <item name="font_medium">40sp</item>
    </style>

</resources>
